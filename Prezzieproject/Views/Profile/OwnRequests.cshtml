@model IEnumerable<Prezzieproject.Models.RequestsModel>

@{
    ViewBag.Title = "OwnRequests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Here you can see your own Requests:</h2>

    <p>
        <a class="btn btn-default" style="background-color:#ffffff" @Html.ActionLink("Go back to your profile", "Index", "Profile")</a>
       
        <a class="btn btn-default" style="background-color:#ffffff" @Html.ActionLink("Create a new request", "OwnRequests", "Profile")</a>
    </p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.requestDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @item.name
        <tr>
            <td>@item.name</td>
            <td>@item.country</td>
            <td>@item.requestDate.ToShortDateString()</td>
            <td>
                @Html.ActionLink("Edit", "Edit", item) |
                @Html.ActionLink("Details", "Details", new { item }) |
                @Html.ActionLink("Delete", "Delete", new { item })
            </td>
        </tr>
    }

</table>
