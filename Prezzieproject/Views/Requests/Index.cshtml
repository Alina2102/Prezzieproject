@model IEnumerable<Prezzieproject.Models.RequestsModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Requests</h2>

<p>
    <a class="btn btn-default" style="background-color:#feab33" @Html.ActionLink("Create New", "Create")</a>
</p>

    @foreach (var item in Model)
    { <div class="jumbotron">
          <table class="table">
              <tr>
                  <td>Souvenir:</td>
                  <td>@item.souvenirName</td>
              </tr>
              <tr>
                  <td>Country:</td>
                  <td>@item.countrySouv</td>
              </tr>
              <tr>
                  <td>Description:</td>
                  <td>@item.descriptionSouv</td>
              </tr>
              <tr>
                  <td>Request Date:</td>
                  <td>@item.requestDate.ToShortDateString()</td>
              </tr>
              <tr>
                  <td>
                     <a class="btn btn-default" style="background-color:#56c8c8" @Html.ActionLink("Details", "Details", new { item })
                  </td>
              </tr>
          </table>
         </div>}


